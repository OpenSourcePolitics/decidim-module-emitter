<% if display_emitter(model) %>
  <div class="card-data emitter-header">
    <div class="large-4 small-12 card-data__item">
      <%= display_emitter(model).try(:[], :picture) %>
    </div>
    <div class="small-12 large-8 card-data__item">
      <%= display_emitter(model).try(:[], :text) %>
    </div>
  </div>
<% end %>